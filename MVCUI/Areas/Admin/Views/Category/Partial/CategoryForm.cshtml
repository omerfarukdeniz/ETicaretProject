@model Category
@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.Label("Kategori İsmi")
        @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control", @placeholder = "Kategori İsmi" })<br />
        @Html.ValidationMessageFor(x => x.CategoryName)
    </div>
    <div class="form-group">
        @Html.Label("Açıklama")
        @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Açıklama", @style = "resize:none" })
        @Html.ValidationMessageFor(x => x.Description)
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-info">Onayla</button>
    </div>
}