@model List<EntityAttribute>
<div class="panel-body">
    <div class="adv-table">
        <table class="display table table-bordered table-striped" id="example">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Özellik İsmi</th>
                    <th>Açıklama</th>
                    <th>Eklenme Tarihi</th>
                    <th>Silinme Tarihi</th>
                    <th>Güncellenme Tarihi</th>
                    <th>Durumu</th>
                    <th>Ekleyen</th>
                    <th>Güncelleyen</th>
                    <th>Silen</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @if (Model is null)
                {
                    <tr>
                        <td colspan="11">Görüntülenecek Özellik Yok</td>
                    </tr>
                }
                else
                {
                    foreach (EntityAttribute item in Model)
                    {
                        <tr>
                            <td>@item.ID</td>
                            <td>@item.AttributeName</td>
                            <td>@item.Description</td>
                            <td>@item.CreatedDate</td>
                            <td>@item.DeletedDate</td>
                            <td>@item.ModifiedDate</td>
                            <td>@item.Status</td>
                            <td>@item.CreatedBy</td>
                            <td>@item.UpdatedBy</td>
                            <td>@item.DeletedBy</td>
                            <td>
                                @if (item.Status == MODEL.Enums.DataStatus.Inserted || item.Status == MODEL.Enums.DataStatus.Updated)
                                {
                                    <a href="" class="btn btn-danger btn-xs" onclick="Delete('/Admin/EntityAttribute/DeleteEA/',@item.ID)"><i class="icon-trash"></i></a>
                                }
                                <a href="/Admin/EntityAttribute/UpdateEA/@item.ID" class="btn btn-primary btn-xs"><i class="icon-pencil"></i></a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
            <tfoot>
                <tr>
                    <th>ID</th>
                    <th>Özellik İsmi</th>
                    <th>Açıklama</th>
                    <th>Eklenme Tarihi</th>
                    <th>Silinme Tarihi</th>
                    <th>Güncellenme Tarihi</th>
                    <th>Durumu</th>
                    <th>Ekleyen</th>
                    <th>Güncelleyen</th>
                    <th>Silen</th>
                    <th>İşlemler</th>
                </tr>
            </tfoot>
        </table>
    </div>
</div>