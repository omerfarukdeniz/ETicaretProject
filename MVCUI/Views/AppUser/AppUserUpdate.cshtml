@model AppUserVM
@{
    ViewBag.Title = "AppUserUpdate";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<!-- page start-->
<div class="row">
    <aside class="profile-nav col-lg-3">
        <section class="panel">
            <div class="user-heading round">

                <h1>@Model.AppUser.UserName</h1>
                <p>@Model.AppUser.Email</p>
            </div>

            <ul class="nav nav-pills nav-stacked">
                <li><a href="@Url.Action("Index","AppUser", new { ID = Model.AppUser.ID })"><i class="icon-user"></i>Profil</a></li>
                <li class="active"><a href="#"> <i class="icon-edit"></i>Profili Düzenle</a></li>
            </ul>
        </section>
    </aside>
    <aside class="profile-info col-lg-9">
        <section class="panel">
            <div class="bio-graph-heading">

                @*@Model.AppUserDetail.FirstName @Model.AppUserDetail.LastName*@
            </div>
            <div class="panel-body bio-graph-info">
                <h1> Profili Düzenle</h1>
                @using (Html.BeginForm("AppUserUpdate", "AppUser", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.HiddenFor(x => x.AppUser.ID)
                    @Html.HiddenFor(x => x.AppUserDetail.ID)
                    <div class="form-group">
                        <label class="col-lg-2 control-label">İsim</label>
                        <div class="col-lg-6">
                            @Html.TextBoxFor(x => x.AppUserDetail.FirstName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Soyisim</label>
                        <div class="col-lg-6">
                            @Html.TextBoxFor(x => x.AppUserDetail.LastName, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Cinsiyet</label>
                        <div class="col-lg-6">
                            @Html.EnumDropDownListFor(x => x.Gender, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Doğum Tarihi</label>
                        <div class="col-lg-6">
                            @Html.TextBoxFor(x => x.AppUserDetail.BirthDate, new { @class = "form-control form-control-inline input-medium default-date-picker" })
                            @*<input type="text" placeholder="" data-mask="(999) 999-9999" class="form-control">*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Telefon</label>
                        <div class="col-lg-6">
                            @Html.TextBoxFor(x => x.AppUserDetail.Phone, new { @class = "form-control" })
                            @*<input type="text" placeholder="" data-mask="(999) 999-9999" class="form-control">*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Adres</label>
                        <div class="col-lg-6">
                            @Html.TextAreaFor(x => x.AppUserDetail.Adress1, new { @class = "form-control", @cols = "10", @rows = "3", @style = "resize:none" })
                            @*<textarea name="" id="" class="form-control" cols="10" rows="3" style="resize:none"></textarea>*@
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">Adres 2</label>
                        <div class="col-lg-6">
                            @Html.TextAreaFor(x => x.AppUserDetail.Adress2, new { @class = "form-control", @cols = "10", @rows = "3", @style = "resize:none" })

                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-lg-2 control-label">E-Posta</label>
                        <div class="col-lg-6">
                            @*@Html.TextBoxFor(x => x.AppUser.Email, new { @class = "form-control" })*@
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">

                            <button type="submit" class="btn btn-success">Kaydet</button>
                        </div>
                    </div>
                }
            </div>
        </section>
        <section>
            <div class="panel panel-primary">
                <div class="panel-heading"> Şifre Değiştir </div>
                <div class="panel-body">
                    <form class="form-horizontal" role="form">
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Eski Şifre</label>
                            <div class="col-lg-6">
                                <input type="password" class="form-control" id="c-pwd" placeholder=" ">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Yeni Şifre</label>
                            <div class="col-lg-6">
                                <input type="password" class="form-control" id="n-pwd" placeholder=" ">
                            </div>
                        </div>
                        <div class="form-group">
                            <label class="col-lg-2 control-label">Yeni Şifre Tekrar</label>
                            <div class="col-lg-6">
                                <input type="password" class="form-control" id="rt-pwd" placeholder=" ">
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-lg-offset-2 col-lg-10">
                                <button type="submit" class="btn btn-info">Kaydet</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </aside>
</div>

<!-- page end-->